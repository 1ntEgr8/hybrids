{
  "name": "hybrids",
  "version": "0.6.2",
  "description": "Web Components Toolkit",
  "main": "dist/hybrids.js",
  "author": "Dominik Luba≈Ñski <dominik.lubanski@gmail.com>",
  "repository": "https://github.com/hybridsjs/hybrids",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "karma start",
    "dev:coverage": "rm -rf ./coverage && NODE_ENV=coverage npm run dev",
    "test": "karma start --single-run",
    "test:coverage": "NODE_ENV=coverage npm run test",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "dist": "rm -rf ./dist && npm run dist:dev && npm run dist:prod",
    "dist:dev": "webpack hybrids=./hybrids.js --optimize-minimize --define process.env.NODE_ENV='\"development\"'",
    "dist:prod": "webpack hybrids.min=./hybrids.js --optimize-minimize --define process.env.NODE_ENV='\"production\"'",
    "prebuild": "ls packages | xargs -I {dir} rm -rf packages/{dir}/lib",
    "build": "ls packages | xargs -I {dir} babel packages/{dir}/src -d packages/{dir}/lib -s inline",
    "deploy": "npm run test && npm run build && lerna publish && npm run dist && npm publish"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.6.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.11.16",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^2.2.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "lerna": "^2.0.0-rc.4",
    "webpack": "^2.4.1"
  }
}
