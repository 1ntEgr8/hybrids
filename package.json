{
  "name": "hybrids",
  "version": "0.3.0",
  "description": "Web Components Toolkit",
  "main": "dist/hybrids.js",
  "author": "Dominik Luba≈Ñski <dominik.lubanski@gmail.com>",
  "repository": "https://github.com/hybridsjs/hybrids",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "karma start",
    "dev:coverage": "NODE_ENV=coverage karma start",
    "prebuild": "ls packages | xargs -I {dir} rm -rf packages/{dir}/lib",
    "build": "ls packages | xargs -I {dir} babel packages/{dir}/src -d packages/{dir}/lib -s inline",
    "test": "karma start --single-run --reporters progress",
    "dist": "rm -rf ./dist && npm run dist:dev && npm run dist:prod",
    "dist:dev": "webpack hybrids=./src/hybrids.js --optimize-dedupe --optimize-occurence-order --define process.env.NODE_ENV='\"development\"'",
    "dist:prod": "webpack hybrids.min=./src/hybrids.js --optimize-dedupe --optimize-minimize --optimize-occurence-order --define process.env.NODE_ENV='\"production\"'",
    "prepublish": "npm run test && npm run dist",
    "predeploy": "npm run test && npm run build",
    "deploy": "lerna publish"
  },
  "license": "MIT",
  "devDependencies": {
    "@webcomponents/custom-elements": "github:webcomponents/custom-elements",
    "@webcomponents/shadycss": "github:webcomponents/shadycss",
    "@webcomponents/shadydom": "github:webcomponents/shadydom",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-es2015": "^6.6.0",
    "core-js": "^2.4.1",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^2.2.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lerna": "2.0.0-beta.30",
    "template": "github:webcomponents/template",
    "webpack": "^1.12.15"
  }
}
